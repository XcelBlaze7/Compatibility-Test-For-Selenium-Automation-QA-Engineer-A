<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
	<Property name="basePath">./LogReport</Property>
</Properties>
 
<Appenders>
      <RollingFile name="File" fileName="${basePath}/LogFile.log" filePattern="${basePath}/logFile-%d{yyyy-MM-dd}.log" immediateFlush="false" append="false">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      		<SizeBasedTriggeringPolicy size="" />
      </RollingFile>
      <Console name="Console" target="SYSTEM_OUT">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      </Console>
      <Appender>
      	log4j.appender.LOGFILE.Append=false
      </Appender>
 </Appenders>
 <Loggers>
 	<Logger name="com.JabaTalks.BaseClass.Useable_Classes" level="trace" additivity="false">
      	<AppenderRef ref="File"/>
    </Logger>
    <Root level="trace">
      <AppenderRef ref=""/>
    </Root>
 </Loggers>
</Configuration>